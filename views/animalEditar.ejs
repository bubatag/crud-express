<%- include('partials/header.ejs') %> 
<%- include('partials/navbar.ejs') %>

<div class="container-editar" data-aos="fade-up" data-aos-duration="500">
  <div class="card bg-dark-custom">
    <div class="card-header-editar" style="background-color: transparent; border-bottom: none;">
      <h4 style="font-weight: 700; width: 100%; border-bottom: solid 2px #ffffff48; text-shadow: 1px 1px 4px rgba(0, 0, 0, 0.2); font-size: 200%;">Editar Animal</h4>
      <form action="/animais/update/<%= animal.idbubalino %>" method="POST" id="label-alterar">
        <input type="hidden" name="id" value="<%= animal.idbubalino %>">
        <label><strong>Nome:</strong></label>
        <input type="text" name="nome" class="form-control" value="<%= animal.nome %>" required id="label-alterar">

        <label><strong>Raça:</strong></label>
        <input type="text" name="raca" class="form-control" value="<%= animal.raca %>" required id="label-alterar">

        <label><strong>Etiqueta:</strong></label>
        <input type="text" name="etiqueta" class="form-control" value="<%= animal.n_etiqueta %>" required id="label-alterar">

        <label><strong>Idade:</strong></label>
        <input type="text" name="idade" class="form-control" value="<%= animal.idade %>" required id="label-alterar">

        <label style="margin-bottom: 3%;"><strong >Sexo: &ensp;</strong></label>
        <label for="masculino" >
          <input
            type="radio"
            id="masculino"
            name="sexo"
            value="Masculino"
          />
          Masculino
        </label>
        <label for="feminino">
          <input 
            type="radio" 
            id="feminino" 
            name="sexo" 
            value="Feminino" 
          />
          Feminino
        </label>
        <br>
        <label><strong>Coleira:</strong></label>
        <select name="idcoleira" class="form-control" required id="label-alterar">
          <option value="" disabled>Selecione uma coleira</option>
          <% coleiras.forEach(coleira => { %>
            <option value="<%= coleira.idcoleira %>" 
              <%= animal.idcoleira == coleira.idcoleira ? 'selected' : '' %>>
                  Coleira Nº<%= coleira.idcoleira %> - <%= coleira.ip %>
            </option>
          <% }) %>
        </select>
    </div>
    <div class="card-body">
        <button type="submit" class="btn btn-success" value="Alterar" id="alterar-coleira" 
        onclick="return confirm('Confirma as alterações realizadas para o animal <%= animal.nome %>?')"> Alterar </button>
      </form>
    </div>
  </div>
</div>


<%- include('partials/footer.ejs') %>