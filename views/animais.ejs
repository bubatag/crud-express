<%- include('partials/header.ejs', { bodyClass: 'index-page' }) %> <%-
include('partials/navbar.ejs') %>

<div class="container-fluid min-vh-100" style="padding: 20px 15px;" data-aos="fade-down" data-aos-duration="500">

<div style="display: flex; justify-content: flex-end; margin-bottom: 10px; margin-top: 40px;">
  <button type="button" class="btn btn-success" id="adicionar" data-toggle="modal" data-target="#AdicionarAnimalModal">
    <i class="fa fa-plus" style="margin-right: 5px;"></i>Adicionar Animal
  </button>
</div>

<div class="tabela-container" id="tabelas" style="width: 100%;">

  <table class="table bg-dark-custom table-striped" style="table-layout: fixed; width: 100%; font-size: 1.1rem;">

    <thead>
      <tr >
        <th style="width: 8%;">Visualizar</th>
        <th scope="col" style="width: 6%;">ID</th>
        <th scope="col" style="width: 8%;">Coleira</th>
        <th scope="col" style="width: 15%;">Nome</th>
        <th scope="col" style="width: 12%;">Raça</th>
        <th scope="col" style="width: 10%;">Etiqueta</th>
        <th scope="col" style="width: 10%;">Idade</th>
        <th scope="col" style="width: 8%;">Sexo</th>
        <th scope="col" style="width: 23%; text-align: center;">Ações</th>
      </tr>
    </thead>
    <tbody>
      <% animais.forEach(animal=> { %>
      <tr>
        <td>
          <button class="btn btn-success visualizar-btn" data-id="<%= animal.idbubalino %>" id="visualizar">
            <i class="fa fa-eye" aria-hidden="true"></i>
          </button>
        </td>        
        <td><%= animal.idbubalino %></td>
        <td>
          <% const status = animal.coleira?.coleira_localizacao; %>
          <% if (status === 'Normal') { %>
            <i class="fa fa-circle" style="margin-left: 20%; margin-top: 10%; color: #06D001;"></i>
          <% } else if (status === 'Perigo') { %>
            <i class="fa fa-circle" style="margin-left: 20%; margin-top: 10%; color: #D00801;"></i>
          <% } else if (status === 'Fora') { %>
            <i class="fa fa-circle" style="margin-left: 20%; margin-top: 10%; color: #F2C200;"></i>
          <% } else { %>
            <i class="fa fa-circle" style="margin-left: 20%; margin-top: 10%; color: #cccccc;"></i> <!-- Cinza claro -->
          <% } %>
        </td>
        <td><%= animal.nome %></td>
        <td><%= animal.raca %></td>
        <td><%= animal.n_etiqueta %></td>
        <td><%= animal.idade %> Meses</td>
        <td><%= animal.sexo %></td>
        <td style="text-align: center;">
          <div style="display: flex; justify-content: center; gap: 10px;">
            <a 
            href="/animais/editar/<%= animal.idbubalino %>" 
            style="text-decoration: none;"
            >
            <button class="btn btn-warning" id="editar" style="width: 80px;">
              <i class="fa fa-edit" style="margin-right: 5px;"></i>
            </button>
          </a>
            <a 
            style="text-decoration: none;" 
            onclick="return confirm('Deseja mesmo realizar a exclução do animal: <%= animal.nome %>')" 
            href="/animais/delete/<%= animal.idbubalino %>"
            >
            <button class="btn btn-danger" id="excluir" style="width: 80px;">
              <i class="fa fa-trash" style="margin-right: 5px;"></i>
            </button>
          </a>
          </div>
        </td>
      </tr>

      <% }) %>
    </tbody>
  </table>
</div>
</div>

  <!-- Modal Adicionar Animal -->
  <div
    class="modal fade"
    id="AdicionarAnimalModal"
    tabindex="-1"
    role="dialog"
    aria-labelledby="exampleModalLabel"
    aria-hidden="true"
  >
    <div class="modal-dialog" id="modal-fora" role="document">
      <div class="modal-content" id="modal-dentro">
        <div class="modal-header">
          <h5 class="modal-title" id="exampleModalLabel">
            Adicionar Novo Animal
          </h5>
          <button
            type="button"
            class="close"
            data-dismiss="modal"
            aria-label="Close"
          >
            <span aria-hidden="true" id="x">&times;</span>
          </button>
        </div>
        <form action="/animais/create" method="POST">
          <div class="modal-body">
            <label><strong>Nome</strong></label>
            <input
              type="text"
              name="nome"
              class="form-control"
              required
              id="label-modal"
            />

            <label><strong>Raça</strong></label>
            <input
              type="text"
              name="raca"
              class="form-control"
              required
              id="label-modal"
            />

            <label><strong>Etiqueta</strong></label>
            <input
              type="text"
              name="etiqueta"
              class="form-control"
              required
              id="label-modal"
            />

            <label><strong>Idade</strong></label>
            <input
              type="text"
              name="idade"
              class="form-control"
              required
              id="label-modal"
            />

            <label style="margin-bottom: 3%;"><strong>Sexo: &ensp;</strong></label>
            <label for="masculino">
              <input
                type="radio"
                id="masculino"
                name="sexo"
                value="Masculino"
              />
              Masculino
            </label>

            <label for="feminino">
              <input 
                type="radio" 
                id="feminino" 
                name="sexo" 
                value="Feminino" 
              />
              Feminino
            </label>

            <br />
            <label><strong>Coleira</strong></label>
            <select name="coleira" class="form-control" required id="label-modal">
              <option value="" disabled selected>Selecione uma coleira</option>
              <% coleiras.forEach(coleira => { %>
                <option value="<%= coleira.idcoleira %>">
                  Coleira Nº<%= coleira.idcoleira %> - IP: <%= coleira.ip %>
                </option>
              <% }) %>
            </select>
          </div>
          <div class="modal-footer">
            <button
              type="button"
              class="btn btn-secondary"
              data-dismiss="modal"
              id="excluir"
            >
              Fechar
            </button>
            <button type="submit" class="btn btn-success" id="adicionar">
              Adicionar
            </button>
          </div>
        </form>
      </div>
    </div>
  </div>





<!-- Modal Visualização -->
<div class="modal fade" id="modalVisualizacao" tabindex="-1" role="dialog" >
  <div class="modal-dialog modal-lg" >
    <div class="modal-content p-3" id="vizualizar-animal">
      <div class="modal-header">
        <h4 class="modal-title">Detalhes do Animal</h4>
          <button
            type="button"
            class="close"
            data-dismiss="modal"
            aria-label="Close"
          >
            <span aria-hidden="true" id="x" id="x">&times;</span>
          </button>
      </div>
      <div class="modal-body">
        <p><strong>Nome:</strong> <span id="modalNome"></span></p>
        <p><strong>Raça:</strong> <span id="modalRaca"></span></p>
        <p><strong>Idade:</strong> <span id="modalIdade"></span></p>
        <p><strong>Sexo:</strong> <span id="modalSexo"></span></p>
        <p><strong>Temperatura:</strong> <span id="modalTemperatura"></span></p>
        <p><strong>Batimentos:</strong> <span id="modalBatimento"></span></p>
      </div>
    </div>
  </div>
</div>
<%- include('partials/footer.ejs') %>